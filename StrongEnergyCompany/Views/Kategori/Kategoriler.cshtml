@using StrongEnergyCompany.Models;

@model Kategori
@{
    ViewBag.Title = "Kategoriler";
}


<h2><br>@Model.Ad</h2>


<div class="card-body">
    <div class="col-7 align-self-center">
        <h5 class="card-title">Products</h5>
        @if (User.IsInRole("A") || User.IsInRole("P"))
        {
            <a class="btn waves-effect waves-light btn-rounded btn-outline-success" href="/Urun/UrunEkle" role="button">Add New Product</a>

        }

    </div>

    <ul class="list-unstyled">

        @foreach (Urun item in ViewBag.Urunler)
        {
            <li class="media">
                <img class="mr-3 w-25" src="~/Content/images/ambalaj_img2.jpg" alt="Generic placeholder image">
                <div class="media-body">
                    <h4 class="mt-0 mb-1 font-weight-bold text-black-50">
                        <br>
                        <br>
                        @item.UrunKodu
                    </h4>
                    <br>
                    @item.Detaylar
                    <br>
                    <br>
                    <h5 class="font-weight-bolder">Specifications :</h5>  @item.Özellikler
                    <br>
                    <br>
                    <div class="row">
                        @if (User.IsInRole("C"))
                        {
                            <div class="col-7 align-self-center">
                                @item.Fiyat $ per unit   .
                                <a class="btn waves-effect waves-light btn-rounded btn-success" href="/Sepet/SepeteEkle/@item.UrunKodu">Add To Card</a>
                            </div>
                        }

                        @if (User.IsInRole("A") || User.IsInRole("P"))
                        {
                            <div class="col-5 align-self-center">
                                <a class="btn waves-effect waves-light btn-rounded btn-outline-danger" href="/Urun/UrunSil/@item.UrunKodu.ToString()" role="button">Delete Product</a>
                                <a class="btn waves-effect waves-light btn-rounded btn-outline-info" href="#" role="button">Update Product</a>
                            </div>
                        }

                    </div>
                </div>
            </li>
        }

    </ul>
</div>